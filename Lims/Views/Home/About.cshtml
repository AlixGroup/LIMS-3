@model IEnumerable<Lims.ViewModels.PurchaseDateGroup>

@{
    ViewBag.Title = "Customer Statistics";
}

<h2>Customer Statistics</h2>

<table class="table table-striped table-hover ">
    <tr>
        <th>
            Purchase Date
        </th>
        <th>
            Customers
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @item.CustomerCount
            </td>
        </tr>
    }
</table>